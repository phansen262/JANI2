<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="description"
            type="String" />
        <variable
            name="type"
            type="Integer" />
        <variable
            name="group"
            type="Integer" />
        <variable
            name="group_visible"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="@{name}"
            android:autofillHints="false"
            android:id="@+id/name_fwee"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity=""
            android:text="@{description}"
            android:autofillHints="true"
            android:id="@+id/description_fwee"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cardview_shadow_start_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Type:  "
            android:layout_marginHorizontal="12dp"
            android:textSize="18dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:selectedItemPosition="@{type}"
            android:id="@+id/type_fwee"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cardview_shadow_start_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{group_visible}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Muscle Group:  "
                android:layout_marginHorizontal="12dp"
                android:textSize="18dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:selectedItemPosition="@{group}"
                android:id="@+id/group_fwee"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cardview_shadow_start_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{group_visible}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record Type:  "
                android:layout_marginHorizontal="12dp"
                android:textSize="18dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/type_radiogroup_fwee">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rtype_sets_reps_fwee"
                    android:text="Sets and Reps"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rtype_sets_reps_weights_fwee"
                    android:text="Sets and Reps with Weights"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rtype_sets_duration_fwee"
                    android:text="Sets and Duration"/>

            </RadioGroup>

        </LinearLayout>


    </LinearLayout>

</layout>