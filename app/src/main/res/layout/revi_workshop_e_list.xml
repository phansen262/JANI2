<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="details"
            type="String" />
        <variable
            name="muscle_groups"
            type="String" />
        <variable
            name="description"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="8dp"
        android:id="@+id/cardview_rwel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_rwel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@{name}"/>

                <TextView
                    android:id="@+id/details_rwel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{details}"/>

                <TextView
                    android:id="@+id/muscle_groups_rwel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{muscle_groups}"/>

                <TextView
                    android:id="@+id/description_rwel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{description}"/>

            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                android:background="#005FFD"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"
                android:id="@+id/add_button_rwel"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>